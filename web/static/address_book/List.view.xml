<mvc:View
	controllerName="sap.m.sample.ListSelectionSearch.List"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	height="100%">
	<Page title="Address Book">
		<subHeader>
			<OverflowToolbar>
				<SearchField liveChange=".onSearch" width="100%" />
			</OverflowToolbar>
		</subHeader>
		<List
			id="idList"
			items="{/companies}"
			selectionChange=".onSelectionChange"
			mode="None"
			growing="false"
			includeItemInSelection="true">
			<infoToolbar>
				<OverflowToolbar visible="false" id="idInfoToolbar">
					<Label id="idFilterLabel" />
				</OverflowToolbar>
			</infoToolbar>
			<CustomListItem>
				<VBox>
					<ObjectHeader
						title="{name}"
						class="sapUiResponsivePadding--header" >
						<statuses>
							<ObjectStatus text="IBAN: {default_iban}" state="Success" />
							<ObjectStatus text="Tax No: {tax_number}" state="Success" />
							<ObjectStatus text="Tax Office: {tax_office}" state="Success" />
						</statuses>
						<ObjectAttribute text="{contact_person}" />
						<ObjectAttribute text="{address} {country}" />
						<ObjectAttribute text="{phone}" />
						<ObjectAttribute text="{email}" active="true"/>
					</ObjectHeader>
				</VBox>
			</CustomListItem>
		</List>
	</Page>
</mvc:View>