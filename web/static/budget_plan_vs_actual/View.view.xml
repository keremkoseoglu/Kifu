<mvc:View
	controllerName="sap.ui.table.sample.Basic.Controller"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
    height="100%">
	<m:Page
		title="Plan vs Actual"
		enableScrolling="true"
		class="sapUiContentPadding">
		<m:content>
			<Table
				rows="{/plan_vs_actuals}"
				selectionMode="None"
				visibleRowCountMode="Auto"
				ariaLabelledBy="title"
				alternateRowColors="true"
				>
				<columns>
					<Column width="5em">
						<m:Label text="Domain" />
						<template>
							<m:Text text="{domain}" wrapping="false" />
						</template>
					</Column>
					<Column width="8em">
						<m:Label text="Subject" />
						<template>
							<m:Text text="{icon} {subject}" wrapping="false" />
						</template>
					</Column>
					<Column>
						<m:Label text="M.Î”" />
						<template>
							<m:HBox>
								<m:Label text="{monthly_delta_icon}" />
								<u:Currency value="{monthly_delta}"  maxPrecision="0" />
							</m:HBox>
						</template>
					</Column>
					<Column>
						<m:Label text="M.Rem." />
						<template>
							<m:HBox>
								<u:Currency value="{monthly_remain_budget}"  maxPrecision="0" />
							</m:HBox>
						</template>
					</Column>
					<Column>
						<m:Label text="A.Rem." />
						<template>
							<m:HBox>
								<u:Currency value="{annual_remain_budget}"  maxPrecision="0" />
							</m:HBox>
						</template>
					</Column>
					<Column>
						<m:Label text="A.Pln." />
						<template>
							<u:Currency value="{annual_plan_amount}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="A.Act." />
						<template>
							<u:Currency value="{actual_sum}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="M.Pln." />
						<template>
							<u:Currency value="{monthly_plan_amount}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="M.Avg." />
						<template>
							<u:Currency value="{avg_monthly_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="Jan" />
						<template>
							<u:Currency value="{jan_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="Feb" />
						<template>
							<u:Currency value="{feb_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="Mar" />
						<template>
							<u:Currency value="{mar_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="Apr" />
						<template>
							<u:Currency value="{apr_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="May" />
						<template>
							<u:Currency value="{may_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="Jun" />
						<template>
							<u:Currency value="{jun_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="Jul" />
						<template>
							<u:Currency value="{jul_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="Aug" />
						<template>
							<u:Currency value="{aug_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="Sep" />
						<template>
							<u:Currency value="{sep_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="Oct" />
						<template>
							<u:Currency value="{oct_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="Nov" />
						<template>
							<u:Currency value="{nov_actual}"  maxPrecision="0" />
						</template>
					</Column>
					<Column>
						<m:Label text="Dec" />
						<template>
							<u:Currency value="{dec_actual}"  maxPrecision="0" />
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>